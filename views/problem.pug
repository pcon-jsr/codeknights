html
 head
   title="CodeKnights-Problem"
   link(rel='stylesheet', href='../css/custom.css')
   link(rel='stylesheet', href='../css/bootstrap.min.css')
   link(rel='stylesheet', href='../css/bootstrap-theme.min.css')
   link(rel='stylesheet', href='../css/style.css')
   script(src='../js/jquery-1.10.2.js')
   script(src='../js/bootstrap.min.js')
   script(src='../js/angular.min.js')
   script(src='../js/jcustom.js')
 body
 nav.navbar.navbar-inverse
  .container-fluid
  .navbar-header
    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
    |  
    .navbar-brand
     | Welcome 
     =username
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    ul.nav.navbar-nav
      li
        a(href='/dashboard')
          | Problems 
          span.sr-only (current)
      li
        a(href='/ranklist') Ranklist
      
    ul.nav.navbar-nav.navbar-right
      form(method='POST' action='/logout')
           button(type='submit' class='btn btn-default' id='logoutBtn') Logout
 .container
  .panel.panel-default
    .panel-heading
      .panel-title
      h2
       !=problem_name 
       |(
       !=problem_code
       |)
       a(href=problem_code+'/submit')  
         button.btn.btn-info.right(type='submit') Submit
    .panel-body
      h3 Problem Statement
      p
        !=problem_statement
      br
      br
      h3 Input Format
      p
        !=input_format
      br
      br
      h3 Output Format
      p
        !=output_format
      br
      br
      h3 Constraints
      p
        !=constraints
      br
      br
      h3 Sample Input
      p
        !=sample_input
      br
      br
      h3 Sample Output
      p
        !=sample_output
      br
      br
